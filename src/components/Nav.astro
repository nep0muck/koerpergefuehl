<style>
    input[type="checkbox"] {
        display: none;
    }

    :checked + label .navlisted {
        display: flex;
    }

    :checked + label .close-button {
        display: block;
    }

    :checked + label .open-button {
        display: none;
    }

    #menu {
        transition: left 300ms 300ms;
    }
    a:focus + #menu {
        left:0;
        transition-delay:0;
    }
</style>
